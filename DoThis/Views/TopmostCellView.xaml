                    </Style.Triggers>
                </Style>
            </controls:Hexagon.Style>

            <controls:Hexagon.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </controls:Hexagon.RenderTransform>

        </controls:Hexagon>

