<UserControl
    x:Class="Beeffective.Views.TopmostCellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Beeffective.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="600"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Button Width="200" Height="200">
        <Button.Template>
            <ControlTemplate>
                <Canvas Width="200" Height="200">

                    <Polygon
                        x:Name="Polygon"
                        Canvas.Left="100"
                        Canvas.Top="100"
                        MouseLeftButtonDown="OnMouseLeftButtonDown"
                        MouseLeftButtonUp="OnMouseLeftButtonUp"
                        MouseMove="OnMouseMove"
                        Points="0,-146 126.44,-73 126.44,73 0,146 -126.4397,73 -126.4397,-73"
                        StrokeThickness="5.0">
                        <Polygon.Style>
                            <Style TargetType="{x:Type Polygon}">
                                <Setter Property="Fill" Value="{StaticResource PrimaryHueDarkBrush}" />
                                <Setter Property="Stroke" Value="{StaticResource PrimaryHueMidBrush}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsSelected}" Value="True">
                                        <Setter Property="Fill" Value="{StaticResource PrimaryHueMidBrush}" />
                                        <Setter Property="Stroke" Value="{StaticResource PrimaryHueDarkBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Polygon.Style>
                        <Polygon.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="30" />
                                <ScaleTransform ScaleX="0.4" ScaleY="0.4" />
                            </TransformGroup>
                        </Polygon.RenderTransform>
                    </Polygon>

                    <Label
                        x:Name="TitleLabel"
                        Canvas.Left="60"
                        Canvas.Top="60"
                        Width="80"
                        Height="80"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontSize="{Binding CellFontSize}"
                        MouseLeftButtonDown="OnMouseLeftButtonDown"
                        MouseLeftButtonUp="OnMouseLeftButtonUp"
                        MouseMove="OnMouseMove">
                        <Label.Content>
                            <AccessText
                                FontFamily="{StaticResource MaterialDesignFont}"
                                FontWeight="Bold"
                                Foreground="{StaticResource PrimaryHueMidForegroundBrush}"
                                Text="{Binding SelectedCell.Title}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </Label.Content>
                    </Label>

                    <sf:SfBusyIndicator
                        Canvas.Left="20"
                        Canvas.Top="16"
                        AnimationSpeed="10"
                        AnimationType="DualRing"
                        Foreground="{StaticResource PrimaryHueMidBrush}"
                        IsBusy="True"
                        MouseLeftButtonDown="OnMouseLeftButtonDown"
                        MouseLeftButtonUp="OnMouseLeftButtonUp"
                        MouseMove="OnMouseMove"
                        Opacity="0.7"
                        ViewboxHeight="160"
                        ViewboxWidth="160" />

                    <TextBlock
                        Canvas.Left="60"
                        Canvas.Top="130"
                        Width="72"
                        Margin="4"
                        FontFamily="{StaticResource MaterialDesignFont}"
                        FontSize="13"
                        FontWeight="Bold"
                        Text="{Binding SelectedCell.TimeSpent, Converter={StaticResource TimeSpanToStringConverter}}"
                        TextAlignment="Center" />

                </Canvas>
            </ControlTemplate>
        </Button.Template>
    </Button>
