<UserControl
    x:Class="Beeffective.Views.TopmostCellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Beeffective.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="600"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Canvas Width="500" Height="500">
        <Canvas.RenderTransform>
            <TransformGroup>
                <TranslateTransform X="-150" Y="-150" />
                <ScaleTransform ScaleX="0.75" ScaleY="0.75" />
            </TransformGroup>
        </Canvas.RenderTransform>

        <!--  Cell  -->
        <Grid
            Canvas.Left="250"
            Canvas.Top="250"
            Visibility="{Binding CellVisibility}">
            <Polygon
                x:Name="Polygon"
                Points="0,-146 126.44,-73 126.44,73 0,146 -126.4397,73 -126.4397,-73"
                StrokeThickness="5.0">
                <Polygon.Style>
                    <Style TargetType="{x:Type Polygon}">
                        <Setter Property="Fill" Value="{StaticResource PrimaryHueDarkBrush}" />
                        <Setter Property="Stroke" Value="{StaticResource PrimaryHueMidBrush}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsSelected}" Value="True">
                                <Setter Property="Fill" Value="{StaticResource PrimaryHueMidBrush}" />
                                <Setter Property="Stroke" Value="{StaticResource PrimaryHueDarkBrush}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Polygon.Style>
                <Polygon.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="30" />
                        <ScaleTransform ScaleX="0.5" ScaleY="0.5" />
                    </TransformGroup>
                </Polygon.RenderTransform>
            </Polygon>

            <Label
                x:Name="TitleLabel"
                Width="100"
                Height="100"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="{Binding CellFontSize}">
                <Label.RenderTransform>
                    <TranslateTransform X="-64" Y="-75" />
                </Label.RenderTransform>
                <Label.Content>
                    <AccessText
                        FontFamily="{StaticResource MaterialDesignFont}"
                        FontWeight="Bold"
                        Foreground="{StaticResource PrimaryHueMidForegroundBrush}"
                        Text="{Binding SelectedCell.Title}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Label.Content>
            </Label>

        </Grid>

        <sf:SfBusyIndicator
            Canvas.Left="150"
            Canvas.Top="145"
            AnimationSpeed="10"
            AnimationType="DualRing"
            Foreground="{StaticResource PrimaryHueMidBrush}"
            IsBusy="True"
            Opacity="0.7"
            ViewboxHeight="200"
            ViewboxWidth="200" />

    </Canvas>
</UserControl>
