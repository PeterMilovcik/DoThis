<UserControl
    x:Class="Beeffective.Views.TopmostCellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Beeffective.Controls"
    xmlns:sf="http://schemas.syncfusion.com/wpf">

    <UserControl.RenderTransform>
        <ScaleTransform ScaleX="1" ScaleY="1" />
    </UserControl.RenderTransform>

    <Canvas Width="500" Height="500">

        <!--  Center  -->
        <controls:Hexagon
            x:Name="CenterCell"
            Canvas.Left="250"
            Canvas.Top="250"
            Canvas.ZIndex="{Binding Topmost.Center.ZIndex}"
            Fill="{StaticResource PrimaryHueDarkBrush}"
            MouseLeftButtonDown="OnMouseLeftButtonDown"
            Stroke="{StaticResource PrimaryHueMidBrush}"
            StrokeThickness="3">

            <controls:Hexagon.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </controls:Hexagon.RenderTransform>

        </controls:Hexagon>

        <!--  North East  -->
        <controls:Hexagon
            x:Name="NorthEastCell"
            Canvas.ZIndex="{Binding Topmost.NorthEast.ZIndex}"
            Fill="Green"
            MouseLeftButtonDown="OnMouseLeftButtonDown"
            Stroke="{StaticResource PrimaryHueMidBrush}"
            StrokeThickness="3">

            <controls:Hexagon.Style>
                <Style TargetType="controls:Hexagon">
                    <Setter Property="Canvas.Left" Value="250" />
                    <Setter Property="Canvas.Top" Value="250" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMenuShown}" Value="True">
                            <Setter Property="Canvas.Left" Value="400" />
                            <Setter Property="Canvas.Top" Value="163.4" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </controls:Hexagon.Style>

            <controls:Hexagon.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </controls:Hexagon.RenderTransform>
        </controls:Hexagon>

        <!--  South East  -->
        <controls:Hexagon
            x:Name="SouthEastCell"
            Canvas.Left="400"
            Canvas.Top="336.6"
            Canvas.ZIndex="{Binding ZIndex}"
            Fill="{StaticResource PrimaryHueDarkBrush}"
            MouseLeftButtonDown="OnMouseLeftButtonDown"
            Stroke="{StaticResource PrimaryHueMidBrush}"
            StrokeThickness="3">

            <controls:Hexagon.Style>
                <Style TargetType="controls:Hexagon">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMenuShown}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </controls:Hexagon.Style>

            <controls:Hexagon.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </controls:Hexagon.RenderTransform>

        </controls:Hexagon>

        <!--  North West  -->
        <controls:Hexagon
            x:Name="NorthWestCell"
            Canvas.Left="100"
            Canvas.Top="163.4"
            Canvas.ZIndex="{Binding ZIndex}"
            Fill="{StaticResource PrimaryHueDarkBrush}"
            MouseLeftButtonDown="OnMouseLeftButtonDown"
            Stroke="{StaticResource PrimaryHueMidBrush}"
            StrokeThickness="3">

            <controls:Hexagon.Style>
                <Style TargetType="controls:Hexagon">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMenuShown}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </controls:Hexagon.Style>

            <controls:Hexagon.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </controls:Hexagon.RenderTransform>

        </controls:Hexagon>

        <!--  South West  -->
        <controls:Hexagon
