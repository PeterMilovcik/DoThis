<UserControl
    x:Class="Beeffective.Views.FinishCellMenuItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Beeffective.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <UserControl.RenderTransform>
        <TranslateTransform X="-100" Y="-100" />
    </UserControl.RenderTransform>
    <Canvas Width="200" Height="200">
        <controls:Hexagon
            Canvas.Left="100"
            Canvas.Top="100"
            Fill="{StaticResource PrimaryHueDarkBrush}"
            Stroke="{StaticResource PrimaryHueMidBrush}"
            StrokeThickness="3" />
        <materialDesign:PackIcon
            Canvas.Left="70"
            Canvas.Top="70"
            Width="60"
            Height="60"
            Foreground="{StaticResource PrimaryHueMidForegroundBrush}"
            Kind="CheckboxMarkedOutline" />

    </Canvas>
</UserControl>
